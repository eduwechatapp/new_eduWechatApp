}
.see_photo{
  height: 150rpx;
  width: 150rpx;
  margin: 60rpx auto 0 auto;
  padding-left: 25rpx
}
.savedPhoto{
  width: 100%;
  height: 1200rpx;
}
.circle{
  height: 150rpx;
  width: 150rpx;
  background-color: white;
  border-radius: 50%;
  position: fixed;
  bottom: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin:0 auto;
  left:0;
  right:0;
}
