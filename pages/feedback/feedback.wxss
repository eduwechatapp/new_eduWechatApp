.page {
    background-color: #fafafa;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content {
    height: 400rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
}

.textarea {
    height: 320rpx;
    width: 710rpx;
    padding: 20rpx;
}

.number_limit {
    height: 40rpx;
    width: 710rpx;
    padding: 20rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.fr {
    color: #848484;
}

.btn{
    margin-top: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #409EFF;
    height: 80rpx;
    width: 250rpx;
    border-radius: 10rpx;
}

.btn .btn-text{
    font-size:32rpx;
    font-weight: bold;
    color:#ffffff;

}

.hover-class{
    opacity: .7;
}
