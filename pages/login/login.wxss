.icon_area{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-content: space-between;
  margin-top: 70rpx
}
.right_icon{
  height: 140rpx;
  width: 140rpx;
}
.tap{
  box-shadow: inset 2px 2px 5px #858585
}
.button{
  height:80rpx;
  width:210rpx;
