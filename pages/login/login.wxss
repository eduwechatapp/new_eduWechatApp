page{
  width: 100%;
  height: 100%;
  background-color: #f5f1e8
}
.register{
  height:670rpx;
  width:80%;
  margin:200rpx auto 0 auto;
  border:1rpx solid #cdcdcd;
  border-radius:20rpx;
  box-shadow:0px 15px 10px -15px #4d4d4d;
}
.bg{
  height:670rpx;
  width:80%;
  border-radius:20rpx;
  position:fixed;
  z-index:-1;
}
.text{
  margin:40rpx auto 0 auto;
  width:60%;
  font-weight:bold;
  font-size:45rpx;
}
.left_area{
  height:250rpx;
  width:200rpx;
  border-radius:20rpx;
  border:1rpx solid #cdcdcd;
  display:flex;
  justify-content:space-around;
  align-items:center;
  flex-wrap:wrap;
  flex-direction:column;
  padding-bottom:12px;
  box-shadow:8rpx 8rpx 7rpx #b4b4b4;
  font-size:40rpx;
  font-weight:bold;
  background-color:white;

}
.selected_stu{
  height:250rpx;
  width:200rpx;
  border-radius:20rpx;
  border:1rpx solid #cdcdcd;
  display:flex;
  justify-content:space-around;
  align-items:center;
  flex-wrap:wrap;
  flex-direction:column;
  padding-bottom:12px;
  box-shadow: inset 2px 2px 5px #858585;
  font-size:40rpx;
  font-weight:bold;
  background-color:white;

}
.left_icon{
  height: 140rpx;
  width: 140rpx;
}
.right_area{
  height:250rpx;
  width:200rpx;
  border-radius:20rpx;
