
.page {
    height: 100%;
    width: 100%;
}

.top_area {
    height: 12%;
    width: 100%;
    background-color: #eee;
    display: flex;
    flex-wrap: wrap;
    align-content: space-around;
    justify-content: space-around;
}

.title {
    text-align: center;
}

.text_area {
    height: 78%;
    width: 95%;
    margin-left: auto;
    margin-right: auto;
}

.bottom_area {
    height: 10%;
    align-items: center;
    display: flex;
}

.button {
    width: 30%;
    display: inline-flex;
}

.button_area {
    display: flex;
    justify-content: space-around;
    width: 100%;
}

.button_area_bottom {
    display: flex;
    justify-content: space-between;
    width: 100%;
    position: fixed;
    bottom: 40rpx;
}