.content-wrapper {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column-reverse;
}

.content-wrapper .bottom {
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  padding: 15rpx;
  box-shadow: 0 10rpx 10px 3px rgba(0, 0, 0, 0.3);
}

.content-wrapper .bottom .button {
  width: 200rpx;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  border-radius: 5px;
}

.im-0 {
  border: thin solid rgb(211, 212, 214);
  background-color: rgb(244, 244, 245);
  color: #909399;
}

.im-0-focus {
  border: thin solid #909399;
  background-color: #909399;
  color: white;
}

.im-1 {
  border: thin solid rgb(179, 216, 255);
  background-color: rgb(236, 245, 255);
  color: #409eff;
}

.im-1-focus {
  border: thin solid #409eff;
  background-color: #409eff;
  color: white;
}

.im-2 {
  border: thin solid #c2e7b0;
  background-color: #f0f9eb;
  color: #67c23a;
}

.im-2-focus {
  border: thin solid #67c23a;
  background-color: #67c23a;
  color: white;
}

.content-wrapper .article {
  padding: 15px;
  overflow: scroll;
}
