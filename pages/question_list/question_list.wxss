@import "../../wxParse/wxParse.wxss";
page{
  background-color: #f3f3f3
}
.question_box{
  margin-bottom: 50rpx;
  background-color: white;
}
.box_top{
  border-bottom: 1rpx solid #ebebeb;
  color: #e5c493;
  background-color: white;
}
.box_content{
  border-top: 1rpx solid #ebebeb;
  border-bottom: 1rpx solid #ebebeb;
  width: 100%;
  background-color: white;
}
.box_bottom{
  border-bottom: 1rpx solid #ebebeb;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end
}
.button_box{
  width: 250rpx;
  height: 100%;
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.button{
  background-color: rosybrown;
  color: white;
  height: 80%;
  display: flex;
  align-items: center;
  
}
.tapPerformance {
  background-color: rgb(114, 59, 59);
  opacity: 0.7;
}