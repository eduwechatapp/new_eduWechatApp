<wux-sticky scrollTop="{{scrollTop}}">
  <wux-sticky-item wx:key='{{index}}' wx:for="{{contentList}}" wx:if="{{item.dataList.length !== 0}}">
    <view slot="title" class='title'>
      <view class='name'>{{item.subject}}</view>
      <view class='more' bindtap='toDetail' data-name='{{item.subject}}'>å…¨éƒ¨ ></view>
    </view>
    <view slot="content">
      <view class="demo-item" wx:for="{{item.dataList}}" wx:for-item="list" wx:key='{{index}}'>
        <view class="list"
          bindtap="toContent"
          hover-class='tap_performance'
          hover-stay-time='100'
          data-index='{{index}}'
          data-subject="{{item.subject}}">
          <view class="left_text">{{index + 1}}.{{list.title}}</view>
          <view class = "icon_display">
            <image src ="../icon/right.png" class="right_icon"></image>
          </view>
        </view>
      </view>
    </view>
  </wux-sticky-item>
</wux-sticky> 
