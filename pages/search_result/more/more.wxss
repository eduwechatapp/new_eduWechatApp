.list-wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pagination {
  box-shadow: 0 10rpx 10px 3px rgba(0, 0, 0, 0.3);
}

.scroll-area {
  overflow: scroll;
  flex-grow: 1;
}

.list {
  width: 95%;
  height: 120rpx;
  border-bottom: #c5c5c5 3rpx solid;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.tap_performance {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.left_text{
  width: 80%;
  margin-left: 20rpx;
}

.icon_display{
  height: 100%;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.right_icon{
  height: 30%;
  width: 25%;
  float: right;
}
