.li {
  width: 95%;
  height: 120rpx;
  border-bottom: #c5c5c5 3rpx solid;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.text {
  width: 80%;
  margin-left: 20rpx;
}

.icon {
  height: 100%;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.icon image {
  height: 30%;
  width: 25%;
  float: right;
}

.on-tap {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
