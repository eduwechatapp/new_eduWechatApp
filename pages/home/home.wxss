.home_pages {
  height: 100%;
}
page{
  background-color: #f5f1e8
}

.icon {
  height: 100%;
  width: 100%
}

.home_area {
  width: 30%;
  height: 250rpx;

}

.image_area {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.icon_text {
  text-align: center;
}

.home_icon {
  width: 100%;
