<view class="home-wrapper">
  <view class="top-input-area" style="background-color: white;" bindtap="enterSearchMode" wx:if="{{!showMask}}">
    <image class="left-icon" src="../icon/find.png" />
    <text class="input" style="background-color:white;">搜索资料</text>
  </view>
  <view class="swiper" wx:if="{{!showMask}}">
    <swiper duration="200" style="height: 100%;" bindchange="swiperChange" autoplay="true" circular="true" bindtap='toPage'>
      <swiper-item wx:for="{{bannerList}}" wx:key="{{index}}">
        <image class="swiper-image" src="{{item}}" />
      </swiper-item>
    </swiper>
  </view>
  <view class="subject-card" wx:if="{{!showMask}}">
  </view>
  <wux-animation-group in="{{ animation_group.in }}" enter="{{ animation_group.enter }}" exit="{{ animation_group.exit }}" class-names="{{ animation_group.className }}">
    <!-- 遮罩层 -->
    <view wx:if="{{showMask}}" class="shade">
      <!-- 面板内容 -->
      <view class="mask_top">
        <view class="mask_input_area">
          <image class="mask_left_icon" src="../icon/find.png"></image>
          <input type="text" confirm-type="search" placeholder="{{input_value}}" class="mask_input" bindinput='input' bindconfirm="inputConfirm" auto-focus />
        </view>
        <view class="cancle" bindtap="cancle">取消</view>
      </view>
      <wux-accordion-group title="高级搜索">
        <wux-accordion title="学科选择">
          <wux-row>
            <wux-col span="3" offset="1" wx:for="{{sub_first}}" wx:key="unique">
              <button class="{{currentTap==item.unique ? 'selected':'button'}}" size="mini" bindtap='switchStatus' data-id="{{item.unique}}">
                {{item.name}}
              </button>
            </wux-col>
          </wux-row>
          <wux-row>
            <wux-col span="3" offset="1" wx:for="{{sub_second}}" wx:key="unique">
              <button class="{{currentTap==item.unique ? 'selected':'button'}}" size="mini" bindtap='switchStatus' data-id="{{item.unique}}">
                {{item.name}}
              </button>
            </wux-col>
          </wux-row>
          <wux-row>
            <wux-col span="3" offset="1" wx:for="{{sub_third}}" wx:key="unique">
              <button class="{{currentTap==item.unique ? 'selected':'button'}}" size="mini" bindtap='switchStatus' data-id="{{item.unique}}">
                {{item.name}}
              </button>
            </wux-col>
          </wux-row>
        </wux-accordion>
        <wux-accordion title="搜索模式">
          <wux-row>
            <wux-col span="5" offset="1" wx:for="{{model}}" wx:key='{{index}}'>
              <button class="{{currentModel==item.unique ? 'selected':'button'}}" size="mini" bindtap='switchModel' data-id="{{item.unique}}">
                {{item.name}}
              </button>
            </wux-col>
          </wux-row>
        </wux-accordion>
      </wux-accordion-group>
    </view>
  </wux-animation-group>
</view>
