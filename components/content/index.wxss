.content-wrapper {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-wrapper .article {
  padding: 15px;
  overflow: scroll;
  flex-grow: 1;
}

.content-wrapper .bottom {
  padding: 15rpx;
  box-shadow: 0 10rpx 10px 3px rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: space-around;
}

.button {
  width: 200rpx;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  border-radius: 5px;
}

.im-0 {
  border: thin solid rgb(211, 212, 214);
  background-color: rgb(244, 244, 245);
  color: #909399;
}

.im-0-focus {
  border: thin solid #909399;
  background-color: #909399;
  color: white;
}

.im-1 {
  border: thin solid rgb(179, 216, 255);
  background-color: rgb(236, 245, 255);
  color: #409eff;
}

.im-1-focus {
  border: thin solid #409eff;
  background-color: #409eff;
  color: white;
}

.im-2 {
  border: thin solid #c2e7b0;
  background-color: #f0f9eb;
  color: #67c23a;
}

.im-2-focus {
  border: thin solid #67c23a;
  background-color: #67c23a;
  color: white;
}

.prev, .next {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  flex-grow: 1;
}

.importance-button {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.prev .prev-icon, .next .next-icon {
  position: absolute;
  width: 10px;
  height: 10px;
  border: 3px solid black;
}

.prev .prev-icon {
  border-top-color: transparent;
  border-right-color: transparent;
  transform: rotate(45deg);
}

.next .next-icon {
  border-bottom-color: transparent;
  border-left-color: transparent;
  transform: rotate(45deg);
}

.popup {
  position:fixed;
  bottom:120rpx;
  width:100vw;
  display: flex;
  justify-content: space-around;
}

.popup .button {
  box-shadow: 0 0 10px 1px rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.mask {
  background: transparent;
  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
}
