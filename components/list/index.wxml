<view class="list-wrapper">
  <view class='scroll-area'>
    <view class="list" bindtap="tapItem" wx:for="{{list}}" wx:key='{{index}}' hover-class='tap_performance' hover-stay-time='100' data-index="{{index}}">
      <view class="left_text">{{item.title}}</view>
      <view class="icon_display">
        <image src="/pages/icon/right.png" class="right_icon"></image>
      </view>
    </view>
  </view>
  <view class='pagination'>
    <view bindtap='changePage' data-type='prev'>上一页</view>
    <view bindtap='changePage' data-type='next'>下一页</view>
  </view>
</view>