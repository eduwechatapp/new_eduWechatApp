.scroll-view {
  height: 100vh;
  margin-bottom: -50px;
}

.push-back {
  height: 50px;
}

.pagination {
  box-shadow: 0 10rpx 10px 3px rgba(0, 0, 0, 0.3);
  height: 50px;
  display: flex;
  background: white;
  justify-content: space-between;
  z-index: 10;
  position: relative;
}

.pagination view {
  display: flex;
  padding: 13px 90rpx;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

/* */

.list {
  width: 95%;
  height: 120rpx;
  border-bottom: #c5c5c5 3rpx solid;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.on-tap {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.left-text {
  width: 80%;
  margin-left: 20rpx;
}

.icon-display {
  height: 100%;
  width: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.right-icon {
  height: 30%;
  width: 25%;
  float: right;
}

.tap {
  opacity: 0.7;
  background-color: rgba(0, 0, 0, 0.3)
}